import java.sql.*;

public class DisplayTopStudents {
    public static void main(String[] args) {
        // Replace these placeholders with your actual database info before running
        String url = "jdbc:mysql://<HOST>:<PORT>/<DATABASE_NAME>"; 
        String user = "<USERNAME>";
        String password = "<PASSWORD>";

        try (Connection con = DriverManager.getConnection(url, user, password);
             Statement stmt = con.createStatement()) {

            // Query students with percentage > 70
            String query = "SELECT roll_no, name, percentage FROM Student WHERE percentage > 70";
            ResultSet rs = stmt.executeQuery(query);

            System.out.println("Students with percentage > 70:");
            while (rs.next()) {
                int roll = rs.getInt("roll_no");
                String name = rs.getString("name");
                double perc = rs.getDouble("percentage");
                System.out.println("Roll No: " + roll + ", Name: " + name + ", Percentage: " + perc);
            }

        } catch (SQLException e) {
            e.printStackTrace();
        }
    }
}
